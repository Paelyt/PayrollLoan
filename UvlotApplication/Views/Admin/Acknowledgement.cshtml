
@{
    ViewBag.Title = "Acknowledgement";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@model DataAccessLayerT.DataManager.AppLoan
<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            @*<h4 class="title">Company Profile</h4>*@
            <!-- Mega Form Starts -->
            <section class="section-padding contact-us-padding form-padding">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @using (Html.BeginForm("CompanyProfile", "Admin", FormMethod.Get))
                            {
                                <form action="#" method="post">


                                    <div class="row list-input">
                                        <div class="col-md-12 col-lg-12 formHeaderBg">
                                            <h3 class="formHeader">Acknowledgement</h3>
                                        </div>

                                        <div class="col-md-6 mr0">
                                            <div>
                                                @*<input type="text"  name="institutionName" value="Firstname : @Model.Firstname" readonly="true">*@

                                            </div>
                                            <P>Surname : @Model.Surname</P>

                                        </div>

                                        <div class="col-md-6 right">
                                            <div>
                                                @*<input type="text" name="other" value="Surname : @Model.Surname" readonly="true">*@
                                            </div>
                                            <P>Firstname : @Model.Firstname</P>
                                        </div>


                                        <div class="col-md-6 mr0">
                                            <div>
                                                @*<input type="text" name="institutionName" value="Loan Amount : @Model.LoanAmount" readonly="true">*@
                                            </div>
                                            <p>Phone Number : @Model.PhoneNumber</p>
                                        </div>

                                        <div class="col-md-6 right">
                                            <div>
                                                @*<input type="text" name="other" value="Application Status : @Model.ApplicationStatus" readonly="true">*@
                                            </div>
                                            <p>Email: @Model.EmailAddress</p>
                                        </div>
                                        <div class="col-md-6 mr0">
                                            <div>
                                                @* <input type="text" name="institutionName" value="Refrence Number : @Model.LoanRefNumber" readonly="true">*@

                                            </div>
                                            <p>Reference Number : @Model.LoanRefNumber</p>
                                        </div>

                                        <div class="col-md-6 right">
                                            <div>
                                                @*<input type="text" name="other" value="LoanTenure : @Model.LoanTenure" readonly="true">*@
                                            </div>
                                            <p>Loan Tenure :@Model.LoanTenure</p>
                                        </div>

                                        <div class="col-md-6 mr0">
                                            <div>
                                                @*<input type="text" name="institutionName" value="Loan Amount : @Model.LoanAmount" readonly="true">*@
                                            </div>
                                            <p>Loan Amount : &#8358;@Model.ConvertedAmount</p>
                                        </div>

                                        <div class="col-md-6 right">
                                            <div>
                                         
                                            </div>
                                            <p>Loan ApplicationStatus : @Model.ApplicationStatus</p>
                                        </div>
                       @if (TempData["Offer"] == "0")
                                        {
                                            <div class="col-md-6 mr0">
                                                <div class="single-get-touch">
                                                    <a href="@Url.Action("OfferLetter", "Loans",  new { Refid = @Model.LoanRefNumber,target = "_blank" })" class="btn btn-success" target="_blank">View Offer Letter</a>
                                                </div>
                                            </div>
                                        }

                                        @if (TempData["Offer"] == "6")
                                        {
                                            <div class="col-md-6 mr0">
                                                <div class="single-get-touch">
                                                    <a href="@Url.Action("OfferLetter", "Admin",  new { Refid = @Model.LoanRefNumber,target = "_blank" })" class="btn btn-success" target="_blank">View Offer Letter</a>
                                                </div>
                                            </div>
                                        }

                                       
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>

