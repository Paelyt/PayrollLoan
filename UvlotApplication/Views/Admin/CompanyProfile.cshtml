
@{
    ViewBag.Title = "CompanyProfile";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@model UvlotApplication.Classes.InstitutionModel
<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <h4 class="title">Company Profile</h4>
            <!-- Mega Form Starts -->
            <section class="section-padding contact-us-padding form-padding">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @using (Html.BeginForm("CreateInstitution", "Admin", FormMethod.Post))
                            {
                                <form action="#" method="post">
                                  
                                    @if (TempData["Error"] != "")
                                    {
                                        <div id="Msgs" class="alert alert-danger">
                                            @TempData["Error"]
                                        </div>
                                    }

                                    @if (TempData["SucMsg"] != "")
                                    {
                                        <div id="Msgs" class="alert alert-success">
                                            @TempData["SucMsg"]
                                        </div>
                                    }

                                    <div class="row list-input">
                                        <div class="col-md-12 col-lg-12 formHeaderBg">
                                            <h3 class="formHeader">Basic Information </h3>
                                        </div>



                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @*<input type="text" name="institutionName" placeholder="Institution Name*" required>*@
                                                @Html.TextBoxFor(model => model.Name, new { placeholder = "Institution Name*", required = "required" })
                                            </div>
                                        </div>

                                        <div class="col-md-6 right">
                                            <div class="single-get-touch">
                                                @Html.TextBoxFor(model => model.InstitutionEmailAddress, new { placeholder = "Institution Email Address*", required = "required", @type = "email" })
                                            </div>
                                        </div>

                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @Html.TextAreaFor(model => model.InstitutionAddress, new { placeholder = "Institution Address*", required = "required" })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="single-get-touch">
                                                @Html.TextBoxFor(model => model.HeadOfInstition, new { placeholder = "Head Of Instition*", required = "required" })
                                            </div>
                                        </div>
                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @Html.TextBoxFor(model => model.ContactEmailAddress, new { placeholder = "Contact Email Address*", required = "required", @type = "email" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="single-get-touch">
                                                @Html.TextBoxFor(model => model.InstitutionPhoneNo, new { placeholder = "Institution Phone Number*", required = "required" })
                                            </div>
                                        </div>
                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @Html.TextBoxFor(model => model.ContactPhoneNo, new { placeholder = "Contact Phone Number*", required = "required" })
                                            </div>
                                        </div>
                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                <input type="submit" name="submit" class="btn btn-default btn-sm2 btnAction" value="Save" />
                                            </div>
                                        </div>



                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>
