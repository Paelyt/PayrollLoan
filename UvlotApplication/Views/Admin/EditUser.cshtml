
@{
    ViewBag.Title = "EditUser";
    // Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}

<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <h4 class="title">Edit User</h4>
            <!-- Mega Form Starts -->
            <section class="section-padding contact-us-padding form-padding">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post, new { id = "signup" }))
                            {
                                <form action="#" method="post">

                                    @if (TempData["ErrMsg"] != null)
                                    {
                               <div id="Msgs" class="alert alert-danger">
                                            @TempData["ErrMsg"]
                               </div>
                                    }

                                    <div class="row list-input">
                                        <div class="col-md-12 col-lg-12 formHeaderBg">
                                            <h3 class="formHeader">Edit user</h3>
                                        </div>

                                        <input type="text" style="display:none;" name="id" class="form-control1" value="@ViewBag.id" id="exampleInputEmail1" placeholder="ID">
                                   <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                <input type="text" name="fname" placeholder="First Name" value="@ViewBag.firstname" required>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="single-get-touch">
                                                <input type="text" name="lname" placeholder="Last Name" value="@ViewBag.lastname" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mr0">
                            <div class="single-get-touch">
            <input type="email" name="email" placeholder="Email" value="@ViewBag.Email"  required>
                                            </div>
                                        </div>
                              <div class="col-md-6">
                                            <div class="single-get-touch">
                                                <input type="text" name="phone" placeholder="Phone" value="@ViewBag.Phone"  required>
                                            </div>
                                        </div>

                                        @*<div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                <input type="password" name="password" placeholder="Password *" required>
                                            </div>
                                        </div>

                                        <div class="col-md-6 right">
                                            <div class="single-get-touch">
                                                <input type="password" name="cpassword" placeholder="Confrim Password *" required>
                                            </div>
                                        </div>*@

                                        <div class="col-md-12">
                                            <div class="single-get-touch">
                                                <a href="#"> <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction">Update User</button></a>

                                            </div>
                                        </div>



                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>

