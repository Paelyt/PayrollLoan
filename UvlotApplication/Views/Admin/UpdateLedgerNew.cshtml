<script>
    function ConvertLoanAmount() {

        var x = document.getElementById("LoansAmount").value;

        x = parseFloat(x).toFixed(2).split('')

        let ii = x.length - 3
        while ((ii -= 3) > 0) {
            x.splice(ii, 0, ',')
        }

        x.value = x.join('');

        document.getElementById("LoansAmount").value = x.value;

    }



   

