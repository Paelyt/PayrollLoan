
@{
    ViewBag.Title = "EditUser";
    // Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}

<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <h4 class="title">Edit User</h4>
            <!-- Mega Form Starts -->
            <section class="section-padding contact-us-padding form-padding">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @using (Html.BeginForm("UpdateInstitution", "Admin", FormMethod.Post, new { id = "signup" }))
                            {
                                <form action="#" method="post">

                                    @if (TempData["ErrMsg"] != null)
                                    {
                               <div id="Msgs" class="alert alert-danger">
                                            @TempData["ErrMsg"]
                               </div>
                                    }

                                    <div class="row list-input">
                                        <div class="col-md-12 col-lg-12 formHeaderBg">
                                            <h3 class="formHeader">Edit user</h3>
                                        </div>

                                        <input type="text" style="display:none;" name="ids" class="form-control1" value="@ViewBag.id" id="exampleInputEmail1" placeholder="ID">
                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @Html.DropDownList("ID", new SelectList(ViewBag.listInstitution, "ID", "Name"))
                                                </div>
                                            </div>
                                                <div class="col-md-6 mr0">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="Name" placeholder="First Name" value="@ViewBag.Name" required>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="InstCode" placeholder="Last Name" value="@ViewBag.InstCode" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 mr0">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="InstAdd" placeholder="Email" value="@ViewBag.InstAdd" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="InstEmail" placeholder="text" value="@ViewBag.InstEmail" required>
                                                    </div>
                                                </div>

                                                <div class="col-md-6 mr0">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="InstContPhone" placeholder="Email" value="@ViewBag.InstContPhone" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="InstPhone" placeholder="Phone" value="@ViewBag.InstPhone" required>
                                                    </div>
                                                </div>

                                                <div class="col-md-6 mr0">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="InstContEmail" placeholder="Email" value="@ViewBag.InstContEmail" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="single-get-touch">
                                                        <input type="text" name="InstHeadOfInst" placeholder="text" value="@ViewBag.InstHeadOfInst" required>
                                                    </div>
                                                </div>



                                                <div class="col-md-12">
                                                    <div class="single-get-touch">
                                                        <a href="#"> <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction">Update Institution</button></a>

                                                    </div>
                                                </div>



                                            </div>
</form>
                            }
                        </div>
                    </div>
                </div>
            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>

