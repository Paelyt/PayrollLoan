
@{
    ViewBag.Title = "CreateRole";
    //Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}
@model UvlotApplication.Classes.Role


<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <h4 class="title">Role</h4>
            <!-- Mega Form Starts -->
            <section class="section-padding contact-us-padding form-padding">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
@using (Html.BeginForm("CreateRole", "Admin", FormMethod.Post, new { id = "signup" }))
{
                            <form action="#" method="post">
                                @if (TempData["ErrMsg"] != "")
                                {
                                    <div id="Msgs" class="alert alert-danger">
                                        @TempData["ErrMsg"]
                                    </div>
                                }
                                @if (TempData["SucMsg"] != "")
                                {
                                    <div id="Msgs" class="alert alert-success">
                                        @TempData["SucMsg"]
                                    </div>
                                }
                                <div class="row list-input">
                                    <div class="col-md-12 col-lg-12 formHeaderBg">
                                        <h3 class="formHeader">Create Role </h3>
                                    </div>
                       <div class="col-md-6 mr0">
                                        <div class="single-get-touch">
                                            @Html.TextBoxFor(model => model.RoleName, new { placeholder = "Role Name *", @class = "", type = "text", required = "required", })
                                        </div>
                                    </div>

                                    <div class="col-md-6 mr0">
                                        <div class="single-get-touch">
                                            @Html.TextAreaFor(model => model.RoleDescription, 10,40, new { placeholder = "Role Description *", @class = "", type = "text", required = "required", })
                                        </div>
                                    </div>
                                  <div class="col-md-12">
                                        <div class="single-get-touch">
                                            <a href="#"> <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction">Create Role</button></a>

                                        </div>
                                    </div>



                                </div>
                            </form>
}
                        </div>
                    </div>
                </div>

                <div class="tables">
                    <h2 class="title1">All Roles</h2>
                    <div class="table-responsive bs-example widget-shadow">
                        @*<h4>Roles:</h4>*@
                        @{int i = 0;}
                        <table id="myTable" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Role Name</th>
                                    <th>Role Description</th>
                                    <th>Date</th>
                                    <th>Edit Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Data == null)
                                {
                                    <h2>No Record Found</h2>
                                }
                                else
                                {
                                    foreach (var role in ViewBag.Data)
                                    {
                                        <tr>

                                            <td scope="row">@(++i)</td>
                                            <td>@role.RoleName</td>
                                            <td>@role.RoleDescription</td>
                                            <td>@role.ValueDate</td>

                                            <td>
                                                <a onclick="return confirm('Are You Sure?')" href="@Url.Action("EditRole", "Admin", new { id = @role.RoleId })">Edit Role</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>



