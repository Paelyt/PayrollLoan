
@{
    ViewBag.Title = "Sigin";
    //Layout = "~/Views/Shared/_LoginLayout.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}
<h2>CheckAppStatus</h2>
<div class="page-header01">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center ">
                <h2>Check Application Status</h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Application Status</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

@*<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">*@
           

            <section class="section-padding contact-us-padding form-padding">

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @using (Html.BeginForm("CheckAppStatus", "Admin", FormMethod.Post, new { id = "signup" }))
                            {
                                <form action="#" method="post">

                                    
                                    @if (TempData["ErrMsg"] != "")
                                    {
                                        <div id="Msgs" class="alert alert-danger">
                                            @TempData["ErrMsg"]
                                        </div>
                                    }
                                    @if (TempData["SucMsg"] != "")
                                    {
                                        <div id="Msgs" class="alert alert-danger">
                                            @TempData["SucMsg"]
                                        </div>
                                    }


                                    <h2 class="title1">CheckAppStatus</h2>
                                    <div class="row list-input">


                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                <input type="text" value="" required name="RefNumber" />
                                            </div>
                                        </div>


                                        <div class="col-md-12">
                                            <div class="single-get-touch">
                                                @* <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction"></button>*@
                                                <a href="#"> <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction">Proceed</button></a>
                                            </div>
                                        </div>

                                    </div>

                                </form>
                            }
                        </div>

                        @if (ViewBag.Data == null)
                        {
                            <h2>No Record Found</h2>
                        }
                        else
                        {

                            foreach (var LoanApp in ViewBag.Data)
                            {

                                <div class="col-sm-12">
                                    <label class="control-label">Loan RefNumber<span class="color-red">*</span></label>
                                    <span>@LoanApp.LoanRefNumber</span>
                                </div>
                                <div class="col-sm-12">
                                    <label class="control-label">DateCreated<span class="color-red">*</span></label>
                                    <span>@LoanApp.ValueDate</span>
                                </div>

                                <div class="col-sm-12">
                                    <label class="control-label">Loan Amount<span class="color-red">*</span></label>
                                    <span>&#8358;@LoanApp.LoanAmount</span>
                                </div>

                                <div class="col-sm-12">
                                    <label class="control-label">Application Status<span class="color-red">*</span></label>
                                    <span>@LoanApp.ApplicationStatus</span>
                                </div>

                                <div class="col-sm-12">
                                    <label class="control-label">Surname<span class="color-red">*</span></label>
                                    <span>@LoanApp.Surname</span>
                                </div>

                                <div class="col-sm-12">
                                    <label class="control-label">Firstname<span class="color-red">*</span></label>
                                    <span>@LoanApp.Firstname</span>
                                </div>

                                <div class="col-sm-12">
                                    <label class="control-label">Institutions<span class="color-red">*</span></label>
                                    <span>@LoanApp.Institutions</span>
                                </div>
                                <div class="col-sm-12">
                                    <label class="control-label">Loan Amount<span class="color-red">*</span></label>
                                    <span>&#8358;@LoanApp.LoanAmount</span>
                                </div>

                                <div class="col-sm-12">
                                    <label class="control-label">Matriculation Number<span class="color-red">*</span></label>
                                    <span>@LoanApp.MatriculationNumber</span>
                                </div>

                            }
                        }


                        </div>
                    </div>
            </section>

            <!-- // Mega Form Ends-->


        @*</div>
    </div>
    </div>*@
    





