@{
    ViewBag.Title = "EditProfile";
    //Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
 }

<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <h4 class="title">Edit Profile</h4>
            <!-- Mega Form Starts -->
            <section class="section-padding contact-us-padding form-padding">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @*@if (TempData["ErrMsg"] != null)
                            {
                                <div id="Msgs" class="alert alert-danger">
                                    @TempData["ErrMsg"]
                                </div>
                            }*@
                            @using (Html.BeginForm("EditProfile", "Admin", FormMethod.Post, new { id = "signup" }))
                            {
                                <form action="#" method="post">

                                   
                        @if (ViewBag.Data == null)
                        {
                                    <h2>No Record Found</h2>
                        }
                        else
                        {
                                     
                                    <div class="row list-input">
                                        <div class="col-md-12 col-lg-12 formHeaderBg">
                              <h3 class="formHeader">Edit Profile</h3>
                                        </div>
                                        @foreach (var Report in ViewBag.Data)
                                        {
             <div class="col-md-6 mr0">
                 <input type="text" style="display:none;" name="id" class="single-get-touch" value="@Report.id" id="exampleInputEmail1" placeholder="ID">
                                            <div class="single-get-touch">
          <input type="text" name="fname" placeholder="First Name" value="@Report.firstname" required>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="single-get-touch">
                                                <input type="text" name="lname" placeholder="Last Name" value="@Report.lastname" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                <input readonly="true" type="email" name="email" placeholder="Email" value="@Report.Email" required>
                                            </div>
                                        </div>


                                        <div class="col-md-6">
                                            <div class="single-get-touch">
                                                <input type="text" name="phone" placeholder="Phone" value="@Report.Phone" required>
                                            </div>
                                        </div>

                                        @*<div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                <input type="password" name="password" placeholder="Password *" required>
                                            </div>
                                        </div>

                                        <div class="col-md-6 right">
                                            <div class="single-get-touch">
                                                <input type="password" name="cpassword" placeholder="Confrim Password *" required>
                                            </div>
                                        </div>*@
                                        }
                                        <div class="col-md-12">
                                             <div class="single-get-touch">
                                           
                                                <a href="#"> <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction">Edit Profile</button></a>
                                       
                                            </div>
                                        </div>
                                        
                                       

                                    </div>
                                     
                                  }
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>

