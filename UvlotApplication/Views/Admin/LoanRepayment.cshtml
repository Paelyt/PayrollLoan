@{
    ViewBag.Title = "Recommend";
    //Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}



<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            @*<h4 class="title">AllApprovedLoans</h4>*@
            <!-- Mega Form Starts -->

            <section class="section-padding contact-us-padding form-padding">
                <h2 class="title1">LoanRepayment</h2>
                <div class="table-responsive bs-example widget-shadow">
                    @*<h4>Users:</h4>*@
                    @{int i = 0;}
                    <table id="myTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>

                                <th>Date</th>
                                <th>Loan Payment</th>
                                <th>No Transactions</th>



                            </tr>
                        </thead>
                        <tbody>

                            @if (ViewBag.Data == null)
                            {
                                <h2>No Record Found</h2>
                            }
                            else
                            {

                                foreach (var LoanApp in ViewBag.Data)
                                {
                                    <tr>






                                        <td scope="row">@(++i)</td>
                                        <td>@LoanApp.DateCreated</td>
                                        <td>@LoanApp.LoanAmount</td>
                                        <td>@LoanApp.NoOFTransaction</td>




                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (ViewBag.Data != null)
            {
                        <div class="col-md-2">
                            <a href=@Url.Action("Exportoexcel", "Admin")>
                                <button type="submit" class="btn btn-default" onchange="CallChangefunc()">Export To Excel</button>
                            </a>
                        </div>
                    }
                </div>
            </section>
           
                  </div>
        

        <!-- // Mega Form Ends-->

    </div>

</div>

