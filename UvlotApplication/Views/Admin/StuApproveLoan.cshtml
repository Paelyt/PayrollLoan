
@{
    ViewBag.Title = "CreateUser";
    //  Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}

<script type="text/javascript">
$(document).ready(function() {
$('table td:nth-child(6)').each(function() {
    //alert('test');
  let $this = $(this);

  // make sure it's a number
  if (!isNaN($this.text())) {
     // alert('test');
    // convert to number and check value
    if (+$this.text() > 20)
	{

	    var pieces = parseFloat($this.text()).toFixed(2).split('')
        let ii = pieces.length - 3
        while ((ii -= 3) > 0) {
            pieces.splice(ii, 0, ',')
        }
        $this.text(pieces.join(''));

    }
	else
	{
      $this.css('color', 'red');
    }
  }

});
});



</script>
<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <!--<h4 class="title">Create User</h4>-->
            <!-- Mega Form Starts -->
            @if (TempData["Error"] != null)
            {
                <div id="Msgs" class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <section class="section-padding contact-us-padding form-padding">
                        
                <div class="tables">
                    <h2 class="title1">Approve Loan</h2>
                    <div class="table-responsive bs-example widget-shadow">
                        @*<h4>Users:</h4>*@
                        @{int i = 0;}
                        <table id="myTable" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>ContactAddress</th>
                                    <th>Loan Amount</th>
                                    <th>Date</th>
                                    @*<th>Status</th>*@
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>
                            @if (ViewBag.Data == null)
                                {
                                <h2>No Record Found</h2>
                                 }
                                 else
                                 {
                                 foreach (var Loan in ViewBag.Data)
                                 {
                            <tr>
                                <td scope="row">@(++i)</td>
                                <td>@Loan.Surname  @Loan.Firstname</td>
                                <td>@Loan.PhoneNumber</td>
                                <td>@Loan.EmailAddress</td>
                                <td>@Loan.ContactAddress</td>
                                <td>@Loan.LoanAmount</td>
                                <td>@Loan.ValueDate</td>
                                @*<td>@Loan.ApplicationStatus</td>*@
                                <td>
                                    <a onclick="return confirm('Are You Sure?')" href="@Url.Action("RecommendStudentLoan", "Admin", new { Refid = @Loan.LoanRefNumber })">View</a>
                                </td>
                            </tr>
                            }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>

