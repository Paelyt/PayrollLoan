@{
    ViewBag.Title = "Acknowledgement";
    // Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    Layout = "~/Views/Shared/_LayoutDashboardinnerpage.cshtml";
}
@*<h2>AllApprovedLoans</h2>*@

<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <h4 class="title1">My Loan Transactions</h4>
            <!-- Mega Form Starts -->

            <section class="section-padding contact-us-padding form-padding">

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @using (Html.BeginForm("MyLoans", "Admin", FormMethod.Post, new { id = "signup" }))
                            {
                                <form action="#" method="post">

                                    @if (TempData["ErrMsg"] != null)
                                    {
                                        <div id="Msgs" class="alert alert-danger">
                                            @TempData["ErrMsg"]
                                        </div>
                                    }
                                    <div class="tables">

                                        <div class="row list-input">


                                            <div class="col-md-6 mr0">
                                                <div class="single-get-touch">
                                                    <select id="ApplicationStatus" name="ApplicationStatus" data-live-search="true" required="required">
                                                        <option data-tokens="Select State">Application Status</option>
                                                        @foreach (var AppStat in ViewBag.ApplicationStatus)
                                                        {
                                                            <option id="ApplicationStatus" value="@AppStat.ID" data-tokens="@AppStat.Name">@AppStat.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>

                                            @*@Html.HiddenFor(model => model.UserRole.skilledId)*@

                                            <div class="col-md-12">
                                                <div class="single-get-touch">
                                                    @* <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction"></button>*@
                                                    <a href="#"> <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction">Proceed</button></a>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </form>
                            }
                        </div>

                    </div>

                </div>
                <div class="tables">
                    <h2 class="title1">Loan Report</h2>
                    <div class="">
                        <div class="table-responsive bs-example widget-shadow">
                            @*<h4>Users:</h4>*@
                            @{int i = 0;}
                            <table id="myTable" class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>ContactAddress</th>
                                        <th>Loan Amount</th>
                                        <th>Date</th>
                                        @*<th>Status</th>*@
                                        <th>View</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.Data == null)
                                    {
                                        <h2>No Record Found</h2>
                                    }
                                    else
                                    {
                                        foreach (var Loan in ViewBag.Data)
                                        {
                                            <tr>
                                                <td scope="row">@(++i)</td>
                                                <td>@Loan.Surname  @Loan.Firstname</td>
                                                <td>@Loan.PhoneNumber</td>
                                                <td>@Loan.EmailAddress</td>
                                                <td>@Loan.ContactAddress</td>
                                                <td>@Loan.LoanAmount</td>
                                                <td>@Loan.ValueDate</td>
                                                @*<td>@Loan.ApplicationStatus</td>*@
                                                <td>
                                                    <a onclick="return confirm('Are You Sure?')" href="@Url.Action("Recommend", "Admin", new { Refid = @Loan.LoanRefNumber })">View</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            @if (ViewBag.Data != null)
                            {
                                <div class="col-md-2">
                                    <a href=@Url.Action("Exportoexcel", "Admin")>
                                        <button type="submit" class="btn btn-default" onchange="CallChangefunc()">Export To Excel</button>
                                    </a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </section>

            @*<h2 class="title1">LoanTransactionbyDate</h2>*@

        </div>
        <!-- // Mega Form Ends-->

    </div>

</div>

