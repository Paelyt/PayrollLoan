@{
    ViewBag.Title = "CreatePage";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@model UvlotApplication.Classes.Page
<div class="charts">
    <div class="mid-content-top charts-grids">
        <div class="middle-content">
            <h4 class="title">Create Page</h4>
            <!-- Mega Form Starts -->
            <section class="section-padding contact-us-padding form-padding">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-12 col-lg-10">
                            @using (Html.BeginForm("CreatePage", "Admin", FormMethod.Post, new { id = "signup" }))
                            {
                                <form action="#" method="post">

                                    @if (TempData["ErrMsg"] != null)
                                    {
                                        <div id="Msgs" class="alert alert-danger">
                                            @TempData["ErrMsg"]
                                        </div>
                                    }

                                    <div class="row list-input">
                                        <div class="col-md-12 col-lg-12 formHeaderBg">
                    <h3 class="formHeader">Create Page</h3>
                                        </div>
                  <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @Html.TextBoxFor(model => model.PageName, new { placeholder = "Page Name *", @class = "form-control1", type = "text", required = "required", })
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="single-get-touch">
                                               @Html.TextBoxFor(model => model.PageUrl, new { placeholder = "Page Url *", @class = "form-control1", type = "text", required = "required", })
                                            </div>
                                        </div>

                                        <div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @Html.TextAreaFor(model => model.PageDescription, 10, 40, new { placeholder = "Role Description *", @class = "", type = "text", required = "required", })
                                            </div>
                                        </div>
                                        @*<div class="col-md-6 mr0">
                                            <div class="single-get-touch">
                                                @Html.DropDownList("ids", new SelectList("", "id", "page_header", new { placeholder = "Page Url *", @class = "form-control1", required = "required", }))
                                            </div>
                                        </div>*@

                                        <div class="col-md-12">
                                            <div class="single-get-touch"><a href="#"> <button type="submit" name="submit" class="btn btn-default btn-sm2 btnAction">Create Page</button></a>

                                            </div>
                                        </div>



                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>

                <div class="tables">
                    <h2 class="title1">All Pages</h2>
                    <div class="table-responsive bs-example widget-shadow">
                        @*<h4>Roles:</h4>*@
                        @{int i = 0;}
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Page Name</th>
                                    <th>Page Url</th>
                                    <th>Page Description</th>
                                    <th>Edit Page</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Data == null)
                                {
                                    <h2>No Record Found</h2>
                                }
                                else
                                {
                                    foreach (var page in ViewBag.Data)
                                    {
                                        <tr>

                                            <td scope="row">@(++i)</td>
                                            <td>@page.PageName</td>
                                            <td>@page.PageUrl</td>
                                            <td>@page.PageDescription</td>

                                            <td>
                                                <a onclick="return confirm('Are You Sure?')" href="@Url.Action("EditPage", "Admin", new { id = @page.PageID })">Edit Role</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </section>

            <!-- // Mega Form Ends-->

        </div>

    </div>
</div>


